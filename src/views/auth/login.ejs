<div class="max-w-md mx-auto mt-10 bg-white shadow p-6 rounded-lg">
  <h2 class="text-2xl font-bold text-center mb-6">Login</h2>

  <% if (typeof error !== 'undefined') { %>
  <div
    class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
  >
    <strong class="font-bold">Gagal!</strong>
    <span class="block sm:inline"><%= error %></span>
  </div>
  <% } %>

  <form
    action="/login"
    method="POST"
    class="space-y-4"
    x-data="{ show: false, username: '', password: '' }"
  >
    <div>
      <label class="block mb-1 font-medium">Email</label>
      <input
        type="text"
        name="username"
        x-model="username"
        required
        class="w-full border px-3 py-2 rounded-md"
      />
    </div>

    <div>
      <label class="block mb-1 font-medium">Password</label>
      <div class="relative">
        <input
          :type="show ? 'text' : 'password'"
          name="password"
          x-model="password"
          required
          class="w-full border px-3 py-2 rounded-md"
        />
        <button
          type="button"
          @click="show = !show"
          class="absolute right-2 top-2 text-gray-500"
        >
          <!-- SVG saat show = true -->
          <template x-if="show">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              />
            </svg>
          </template>

          <!-- SVG saat show = false -->
          <template x-if="!show">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477 0-8.268-2.943-9.542-7a9.96 9.96 0 012.148-3.568M9.878 9.878a3 3 0 104.242 4.242"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 3l18 18"
              />
            </svg>
          </template>
        </button>
      </div>
    </div>

    <button
      type="submit"
      class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700"
    >
      Login
    </button>

    <div class="text-center text-sm mt-4">
      <a href="/login-with-google" class="text-blue-600 hover:underline"
        >Login dengan Google</a
      >
    </div>

    <!-- Tombol Auto Fill -->
    <!-- separated button -->
    <hr class="my-4" />
    <button
      type="button"
      @click="username = 'admin'; password = 'admin123'"
      class="w-full bg-gray-100 border border-gray-300 text-gray-700 py-2 rounded-md hover:bg-gray-200"
    >
      Demo Admin
    </button>
    <button
      type="button"
      @click="username = 'staff_a'; password = 'staff123'"
      class="w-full bg-gray-100 border border-gray-300 text-gray-700 py-2 rounded-md hover:bg-gray-200"
    >
      Demo Staff A
    </button>
    <button
      type="button"
      @click="username = 'seller_a'; password = 'seller123'"
      class="w-full bg-gray-100 border border-gray-300 text-gray-700 py-2 rounded-md hover:bg-gray-200"
    >
      Demo Seller A
    </button>
    <button
      type="button"
      @click="username = 'customer_a'; password = 'customer123'"
      class="w-full bg-gray-100 border border-gray-300 text-gray-700 py-2 rounded-md hover:bg-gray-200"
    >
      Demo Customer A
    </button>
  </form>
</div>
